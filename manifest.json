{
  "manifest_version": 3,
  "name": "Advanced Safe Passage",
  "version": "2.0.0",
  "description": "An advanced tool to manage browser security warnings with temporary whitelisting and more.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
    "downloads"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
