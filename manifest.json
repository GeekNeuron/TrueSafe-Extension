{
  "manifest_version": 3,
  "name": "TrueSafe",
  "version": "5.0.0",
  "description": "An intelligent security platform to manage browser warnings with professional-grade features.",
  "permissions": [
    "storage",
    "tabs",
    "webNavigation",
    "scripting",
    "downloads",
    "alarms",
    "notifications"
  ],
  "host_permissions": [
    "<all_urls>",
    "httpss://www.virustotal.com/",
    "httpss://crt.sh/"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon128.png"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "web_accessible_resources": [
    {
      "resources": [
        "wasm_hasher_bg.wasm"
      ],
      "matches": [
        "<all_urls>"
      ]
    }
  ]
}
